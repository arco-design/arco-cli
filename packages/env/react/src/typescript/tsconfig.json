{
  "compilerOptions": {
    "lib": ["es2019", "DOM", "ES6", "DOM.Iterable"],
    "target": "es2015",
    "module": "es2020",
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "exclude": ["dist"],
  "include": ["**/*"]
}

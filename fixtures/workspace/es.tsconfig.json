{
  "compilerOptions": {
    "rootDir": "Button",
    "outDir": "es",
    "lib": [
      "es2019",
      "DOM",
      "ES6",
      "DOM.Iterable"
    ],
    "target": "es2015",
    "module": "ES2020",
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "dist"
  ],
  "include": [
    "Button"
  ]
}
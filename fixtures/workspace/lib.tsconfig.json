{
  "compilerOptions": {
    "rootDir": "Button",
    "outDir": "lib",
    "lib": [
      "es2019",
      "DOM",
      "ES6",
      "DOM.Iterable"
    ],
    "target": "es2015",
    "module": "CommonJS",
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "dist",
    "**/__test__",
    "**/__docs__"
  ],
  "include": [
    "Button"
  ]
}